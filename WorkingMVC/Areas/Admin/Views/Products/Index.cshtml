@using WorkingMVC.Data.Entities
@model IEnumerable<ProductEntity>

@{
    ViewData["Title"] = "Список товарів";
}

<h2>@ViewData["Title"]</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-success">Додати новий товар</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>Головне фото</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            // Головне зображення: сортування забезпечує, що IsMain = true буде першим
            var mainImage = item.ProductImages.FirstOrDefault();

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @* Форматування ціни, якщо потрібно *@
                    @item.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("uk-UA"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @if (mainImage != null)
                    {
                        @* Тут потрібно використовувати твій RequestPath, наприклад, /images/products/ім'я.webp *@
                        <img src="/images/products/@mainImage.ImageUrl" alt="@mainImage.ImageDescription" style="width: 50px; height: 50px; object-fit: cover;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>