@using WorkingMVC.Data.Entities.Idenity
@model IEnumerable<UserEntity>
@{
    ViewData["Title"] = "Список користувачів";
}

<h2>Список користувачів</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Users" asp-action="EditRoles" asp-route-userId="@user.Id">Права доступу</a>
                </td>
            </tr>
        }
    </tbody>
</table>